rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create, delete: if isAdmin();
      allow update: if (request.auth != null && request.auth.uid == userId && request.resource.data.diff(request.request.resource.data).unchangedKeys().hasAll(['name', 'phone'])) 
              || (isAdmin() && request.resource.data.diff(request.request.resource.data).changedKeys().hasOnly(['points', 'tokens', 'gamesPlayed']));
    }
    
    function isAdmin() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
